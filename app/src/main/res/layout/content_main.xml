<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.chefd.mealprep.mealprep.MainActivity"
    android:background="@color/darkBlue"
    tools:showIn="@layout/activity_main">

    <TextView android:id="@+id/title_home_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="@string/OverHeadMainScreenText"
        android:textSize="50sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="1"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/title_home_screen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button android:id="@+id/breakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MainTopButton"
        android:textColor="@color/wordColor"
            android:layout_weight="0.02" />

    <Button android:id="@+id/lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MainMiddleButton"
        android:textColor="@color/wordColor"
        android:layout_below="@+id/breakfast"/>

    <Button android:id="@+id/dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MainBottomButton"
        android:textColor="@color/wordColor"
        android:layout_below="@+id/lunch"/>

        <Button
            android:text="@string/bmi_calculator"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:id="@+id/BMI_Button"
            app:layout_anchorGravity="center_vertical|left"
            android:layout_gravity="bottom|center_horizontal" />

        <Button
            android:text="Calorie Calculator"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:id="@+id/CalorieButton" />

    </LinearLayout>

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textColor="@color/wordColor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
