<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chefd.mealprep.mealprep">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ziont"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.default" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BmiCalculatorActivity"
            android:label="@string/title_activity_bmi_screen_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BreakfastActivity"
            android:label="@string/title_activity_breakfast"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ProteinActivity" />
        <activity android:name=".CarbsAcitivity" />
        <activity android:name=".VegetablesActivity" />
        <activity
            android:name=".CaloriesCalculatorActivity"
            android:label="@string/title_activity_calories"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chefd.mealprep.mealprep.MainActivity" />
        </activity>
        <activity
            android:name=".CalorieViewActivity"
            android:label="@string/title_activity_calorie_view"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>